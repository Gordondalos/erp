{% extends '::base.html.twig' %}
{% block body %}

    <h1>{{ 'Client'|trans }}: {{ entity.name }}</h1>

    <div class="row">
        <div class="col-md-4 col-md-offset-8">
            <div class="right">
                <ul class="record_actions">
                    <li>
                        <a href="{{ path('client') }}">
                            {{ 'Back to the list'|trans }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('client_edit', { 'id': entity.id }) }}">
                            {{ 'edit'|trans }}
                        </a>
                    </li>
                    <li>{{ form(delete_form) }}</li>
                </ul>
            </div>
            <table class="record_properties">
                <tbody>
                <tr>
                    <th>{{ 'id'|trans }}</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>{{ entity.phone }}</td>
                </tr>
                <tr>
                    <th>Adress</th>
                    <td>{{ entity.adress }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ entity.email }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ entity.description }}</td>
                </tr>
                </tbody>
            </table>

        </div>
    </div>
<p class="empty"></p>

