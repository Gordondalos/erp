{% extends '::base.html.twig' %}
{% block body %}

    <h1>{{ 'Role list'|trans }}</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>{{ 'RolenameId'|trans }}</th>
                <th>{{ 'Rolename'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('role_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.roleName }}</td>
                <td>
                <ul>

                    <li>
                        <a href="{{ path('role_edit', { 'id': entity.id }) }}">{{ 'edit'|trans }}</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('role_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
