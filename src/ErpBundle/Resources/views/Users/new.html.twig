{% extends '::base.html.twig' %}

{% form_theme form _self %}

    {%- block form_row -%}
        <div class="row">
            <div class="col-xs-3">
                <div class="m-y-05">
                    {{- form_label(form) -}}
                </div>

            </div>
            <div class="col-xs-9">
                {{- form_errors(form) -}}
                <div class="m-y-1">
                    {{- form_widget(form, { 'attr': {'class': 'form-control'} }) -}}

                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    {%- endblock form_row -%}

{%- block textarea_widget -%}
    <textarea class="m-y-1 form-control m-l-1"  {{ block('widget_attributes') }}>{{ value }}</textarea>
{%- endblock textarea_widget -%}

