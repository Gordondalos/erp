{% extends '::base.html.twig' %}
{% block body %}

    <h1>{{ 'Users creation'|trans }}</h1>

    {{ form_start(form) }}
    {{ form_errors(form) }}
    {#{{ form(form) }}#}

    <div class="clearfix"></div>
    {{ form_widget(form.submit,{'attr':{'class':'btn btn-success m-y-1 btn-lg pull-right'}}) }}

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-xs-3 text-xs-right p-y-1">
            {{ form_label(form.username) }}
            {{ form_errors(form.username) }}
        </div>
        <div class="col-xs-9">{{ form_widget(form.username,{'attr':{'class':'form-control'}}) }}
        </div>


    </div>
    <div class="row">
        <div class="col-xs-3 text-xs-right p-y-1">
            {{ form_label(form.email) }}
            {{ form_errors(form.email) }}
        </div>
        <div class="col-xs-9">
            {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>

    <div class="row p-x-2">
        <div class="col-xs-3 text-xs-right p-y-1">
            {{ form_label(form.enabled) }}
            {{ form_errors(form.enabled) }}
        </div>
        <div class="col-xs-9">
            {{ form_widget(form.enabled,{'attr':{'class':'checkbox'}}) }}
        </div>


    </div>
    <div class="row p-x-2">
        <div class="col-xs-3 text-xs-right ">
            {{ form_label(form.locked) }}
            {{ form_errors(form.locked) }}
        </div>
        <div class="col-xs-9">
            {{ form_widget(form.locked,{'attr':{'class':'checkbox'}}) }}
        </div>


    </div>

    <div class="row">
        <div class="col-xs-3 text-xs-right p-y-1">
            {{ form_label(form.password) }}
            {{ form_errors(form.password) }}
        </div>
        <div class="col-xs-9">
            {{ form_widget(form.password,{'attr':{'class':'form-control'}}) }}
        </div>


    </div>



    <div class="row">
        <div class="col-xs-3 text-xs-right p-y-1">
            {{ form_label(form.roles) }}
            {{ form_errors(form.roles) }}
        </div>
        <div class="col-xs-9">
            {{ form_widget(form.roles,{'attr':{'class':'form-control'}}) }}
        </div>


    </div>
    <div class="row">
        <div class="col-xs-3 text-xs-right p-y-1">
            {{ form_label(form.avatar) }}
            {{ form_errors(form.avatar) }}
        </div>
        <div class="col-xs-9">
            {{ form_widget(form.avatar,{'attr':{'class':'form-control'}}) }}
        </div>


    </div>

    <div class="row">
        <div class="col-xs-3 text-xs-right p-y-1">
            {{ form_label(form.phone) }}
            {{ form_errors(form.phone) }}

        </div>
        <div class="col-xs-9">
            {{ form_widget(form.phone,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>

    <div class="container">


        <div class="row">
            {{ form_label(form.skill) }}
            {{ form_errors(form.skill) }}
            {{ form_widget(form.skill,{'attr':{'class':'form-control'}}) }}
        </div>

        <div class="clearfix"></div>
        <div class="row">

            {{ form_label(form.portfolio) }}
            {{ form_errors(form.portfolio) }}
            {{ form_widget(form.portfolio,{'attr':{'class':'form-control'}}) }}


        </div>
        <div class="clearfix"></div>


        <div class="row ">
            {{ form_label(form.price) }}
            {{ form_errors(form.price) }}
            {{ form_widget(form.price,{'attr':{'class':'form-control'}}) }}
        </div>


        <div class="row ">
            {{ form_label(form.description) }}
            {{ form_errors(form.description) }}
            {{ form_widget(form.description) }}
        </div>


    </div>




    {{ form_end(form) }}
    <ul class="record_actions">
        <li>
            <a href="{{ path('users') }}">
                {{ 'Back to the list'|trans }}
            </a>
        </li>
    </ul>
    {% block javascripts %}
        <script src="{{ asset('js/user.js') }}" type="text/javascript"></script>
    {% endblock %}
{% endblock %}
