{% extends '@Erp/layout.html.twig' %}

{% block body -%}
    {{ parent() }}
    <h1>Project list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Projectname</th>
                <th>Projectdescription</th>
                <th>Progectmanager</th>
                <th>Projectcreator</th>
                <th>Datecreate</th>
                <th>Datefinish</th>
                <th>Client</th>
                <th>Summ</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('project_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.projectName }}</td>
                <td>{{ entity.projectDescription }}</td>
                <td>{{ entity.progectManager }}</td>
                <td>{{ entity.projectCreator }}</td>
                <td>{% if entity.dateCreate %}{{ entity.dateCreate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateFinish %}{{ entity.dateFinish|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.client }}</td>
                <td>{{ entity.summ }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('project_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('project_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('project_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
